<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_flow_navigation"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.technomix.technomixbakeryiot.ui.fragments.MainFragment"
        android:label="main_fragment"
        tools:layout="@layout/main_fragment">
        <action
            android:id="@+id/action_mainFragment_to_devicesConnectedFragment"
            app:destination="@id/devicesConnectedFragment" />
    </fragment>
    <fragment
        android:id="@+id/devicesConnectedFragment"
        android:name="com.technomix.technomixbakeryiot.ui.fragments.Devices"
        android:label="devices_connected_fragment"
        tools:layout="@layout/devices_fragment" />
</navigation>